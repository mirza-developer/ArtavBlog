@model IEnumerable<ArtavBlog.Models.Blog.Post>
@{
    ViewData["Title"] = "Home Page";
    int indexFor = 1;
    int indexForeach = 1;
}
<link href="~/lib/carousel/carousel.css" rel="stylesheet" />
<script src="~/lib/carousel/carousel.js"></script>
<script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"
        integrity="sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA=="
        crossorigin="">
</script>
<link href="~/css/stylish-portfolio.min.css" rel="stylesheet" />

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css"
      integrity="sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA=="
      crossorigin="" />
<header>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @foreach (ArtavBlog.Models.Blog.Post item in Model)
            {
                var activeStat = (indexFor == 0 ? "active" : "");
                <li data-target="#carouselExampleIndicators" data-slide-to="@item.PostOrder" class="@activeStat"></li>
                indexFor++;
            }
        </ol>
        <div class="carousel-inner" role="listbox">
            @foreach (ArtavBlog.Models.Blog.Post item in Model)
            {
                var activeStat = (indexForeach == 1 ? "active" : "");
                var picUrl = "/Setting/GetImageByUrl?imageUrl=~/images/Post/" + item.ID + "/" + item.PostPictureName;
                <div class="carousel-item @activeStat" style="background-image: url('@picUrl')">
                    <div class="carousel-caption d-none d-md-block">
                        <h3><a class="no-dec-link text-white" href="/blog/post?postId=@item.ID">@item.Title</a></h3>
                        <p><a class="no-dec-link text-white" href="/blog/post?postId=@item.ID">@item.ContentInBrief</a></p>
                    </div>
                </div>
                indexForeach++;
            }
        </div>
        <img src="" />
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>
<p>
    <h3 class="my-4" style="text-align: center">امکانات مجموعه</h3>
</p>
<div class="row">
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <h4 class="card-header text-align-right">استخر ، سونا و جکوزی</h4>
            <div class="card-body">
                <p class="card-text text-align-right">مجموعه ورزش های آبی شامل استخر ، سونا ، جکوزی ، ماساژ و بوفه آبی</p>
            </div>
            <div class="card-footer border-dark">
                <a href="" class="btn btn-primary">بیشتر بدانید</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <h4 class="card-header text-align-right">ورزش های رزمی</h4>
            <div class="card-body">
                <p class="card-text text-align-right">مجموعه ورزش های رزمی شامل ورزش های تکواندو ، کاراته ، ژیمناستیک ، پارکور ، گراپلینگ ، ووشو ، موی تای و کیک بوکسینگ  </p>
            </div>
            <div class="card-footer border-dark">
                <a href="https://kosarsport.ir/Post/2/سانس-های-استخر" class="btn btn-primary">بیشتر بدانید</a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mb-4">
        <div class="card h-100">
            <h4 class="card-header text-align-right">سالن بدنسازی</h4>
            <div class="card-body">
                <p class="card-text text-align-right">سالن بدنسازی با انواع دستگاه های مختلف و جدیدترین متد روز دنیا</p>
            </div>
            <div class="card-footer border-dark">
                <a href="https://kosarsport.ir/Post/30/معرفی-باشگاه-بدنسازی" class="btn btn-primary">بیشتر بدانید</a>
