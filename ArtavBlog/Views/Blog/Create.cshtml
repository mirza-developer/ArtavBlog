@model ArtavBlog.Models.Blog.Post
@{
    ViewData["Title"] = "ایجاد مطلب جدید";
}
<p></p>
<h2 class="text-align-right">@ViewData["Title"]</h2>
<hr />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site/blog/Create.js"></script>
<div class="row text-align-right">
    <div class="col-md-10 col-md-offset-2">
        <div class="form-group ">
            <form asp-controller="blog" asp-action="create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ContentInBrief" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ContentInBrief" class="form-control" />
                        <span asp-validation-for="ContentInBrief" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PostOrder" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        @Html.DropDownListFor(p => p.PostOrder, (SelectList)ViewData["OrderList"], new { @class = "form-control" })
                        <span asp-validation-for="PostOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PostPictureName" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <input asp-for="PostPictureName" class="form-control prevent-keydown"  />
                        <input id="inputpicture" type="file" name="inputpicture" accept="image/png" style="width:0px" />
                        <br />
                        <button id="button-uploadfile" class="btn btn-primary">آپلود عکس اصلی مطلب</button>
                        <span asp-validation-for="PostPictureName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ContentHtml" class="col-md-2 control-label"></label>
                    <div class="col-md-12">
                        <textarea asp-for="ContentHtml"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-primary" value="@TextResources.APP_STRINGKEYS_Save" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
