@model IEnumerable<ArtavBlog.Models.Blog.Post>
@{
    ViewData["Title"] = "Index";
    var shamsi = new AvizheCalendar.BLL.WorkingWithPersianCalendar();
}

<div class="container">
    <h1 class="mt-4 mb-3 text-align-right">
        بلاگ تخصصی
        <small>ورزش ، تغذیه و سبک زندگی</small>
    </h1>
    <div class="row">

        <div class="col-md-8">
            @foreach (ArtavBlog.Models.Blog.Post item in Model)
            {
                 var picUrl = "/Setting/GetImageByUrl?imageUrl=~/images/Post/" +item.ID +"/"+ item.PostPictureName;
                <div class="card mb-4">
                    <img class="card-img-top" src="@picUrl" alt="Card image cap">
                    <div class="card-body">
                        <h2 class="card-title">@item.Title</h2>
                        <p class="card-text">@item.ContentInBrief</p>
                        <a href="/blog/details?postId=@item.ID" class="btn btn-primary">بیشتر بدانید &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        ارسال شده در 
                        @shamsi.GregorianToPersian(item.CreateDateAndTime)
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="card mb-4 text-align-right">
                <h5 class="card-header">جستجو</h5>
                <div class="card-body">
                    <div class="input-group">
                        <form asp-controller="Blog" asp-action="Search" method="post">
                            @Html.AntiForgeryToken()
                            <input id="q" name="q" type="text" class="form-control" placeholder="مطلب موردنظر...">
                            <span class="input-group-btn">
                                <button class="btn btn-secondary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </span>
                        </form>
                    </div>
                </div>
            </div>
            <div class="card my-4 text-align-right">
                <h5 class="card-header">تبلیغات</h5>
                <div class="card-body">
                   برای انجام تبلیغ خود در سایت با ما در تماس باشید
                </div>
            </div>

        </div>

    </div>
</div>

