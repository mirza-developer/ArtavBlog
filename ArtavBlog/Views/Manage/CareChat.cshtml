    ViewData["Title"] = "CareChat";
}
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<input id="input-opId" type="hidden" value="@ViewData["OpeId"]" />
<input id="input-choosedGuestId" type="hidden" value="" />
<div class="container">
    <div id="chat-customercare" class="row">
        <div class="conversation-wrap col-lg-3">

            <div class="media conversation">
                <a class="img-userprof pull-left" href="#">
                    @*<img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 50px; height: 50px;" src="data:image/png;base64,">*@
                </a>
                <div class="media-body text-align-right">
                    <h5 class="media-heading">کاربر مهمان</h5>
                    <small>Hello</small>
                    <button class="btn btn-warning">بستن گفتگو</button>
                </div>
            </div>
        </div>



        <div class="message-wrap col-lg-8">
            <div id="chat-context" class="msg-wrap">


                <div class="media msg ">
                    <a class="img-userprof pull-left" href="#">
                    </a>
                    <div class="media-body text-align-right">
                        <small class="pull-right time"><i class="fa fa-clock-o"></i> 12:10am</small>
                        <h5 class="media-heading">Naimish Sakhpara</h5>
                        <small class="col-lg-10">
                            Location H-2, Ayojan Nagar, Near Gate-3, Near
                            Shreyas Crossing Dharnidhar Derasar,
                            Paldi, Ahmedabad 380007, Ahmedabad,
                            India
                            Phone 091 37 669307
                            Email aapamdavad.district@gmail.com
                        </small>
                    </div>
                </div>
            </div>
            <div class="send-wrap ">
                <textarea id="input-message" class="form-control send-message" rows="3" placeholder="پیام خود را بنویسید"></textarea>
            </div>
            <div class="btn-panel">
                <button id="button-send" class="col-lg-4 text-left btn send-message-btn pull-right">
                    <i class="fa fa-plus"></i> ارسال
                </button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var userChatTag = $('<img>')
            .attr('src', '/setting/GetImageByUrl?imageUrl=~/images/app/user.png')
            .attr('style', 'width: 50px; height: 50px;')
            .addClass('media-object');
        var userCareTag = $('<img>')
            .attr('src', '/setting/GetImageByUrl?imageUrl=~/images/app/care.png')
            .attr('style', 'width: 50px; height: 50px;')
            .addClass('media-object');
        var operatorId = $('#input-opId').val();
        $('.img-userprof').html(userChatTag);
        var connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
        connection.start().catch(function (e) {
            console.log(e);
        });
        //await Clients.All.SendAsync("CareReceive", "Guest", Context.ConnectionId, message);
        connection.on("CareReceive", (sender, connectionId, message, messageId) => {
            var messageText = message;
            var dt = new Date();
            var divParent = $('<div>').addClass('media')
                .addClass('msg', connectionId)
                .attr('msg-Id', messageId);
            $('#chat-context').append(divParent);
            var aLogo = $('<a>')
                .addClass('img-userprof')
                .addClass('pull-left')
                .attr('href', '#');
            divParent.append(aLogo);
            var divChild = $('<div>')
                .addClass('media-body')
                .addClass('text-align-right');
            var small = $('<small>')
                .addClass('pull-right time');
            var time = dt.getHours() + ":" + dt.getMinutes()
            var i = $('<i>')
                .addClass('fa')
                .addClass('fa-clock-o')
                .html(time);
            small.append(i);
            divChild.append(small);
            var h = $('<h5>')
                .addClass('media-heading').html('Guest');
            divChild.append(h);
            var smallInner = $('<small>')
                .addClass('col-lg-10')
                .html(message);
            divChild.append(smallInner);
            divParent.append(divChild);
            $('.img-userprof').html(userChatTag);


            $('#input-choosedGuestId').val(connectionId);
        });
        $('#button-send').click(function () {
            debugger;
            var message = $('#input-message').val();
            if (message === '') {
                return;
            }
            $('#input-message').val('');
            var connectionId = $('#input-choosedGuestId').val();
            connection.invoke('CareSend', connectionId, operatorId, message).catch(err => console.error(err.toString()));
           var dt = new Date();
            var divParent = $('<div>').addClass('media')
                .addClass('msg', connectionId)
                .attr('msg-Id', '');
            $('#chat-context').append(divParent);
            var aLogo = $('<a>')
                .addClass('img-careprof')
                .addClass('pull-left')
                .attr('href', '#');
            divParent.append(aLogo);
            var divChild = $('<div>')
                .addClass('media-body')
                .addClass('text-align-left');
            var small = $('<small>')
                .addClass('pull-right time');
            var time = dt.getHours() + ":" + dt.getMinutes()
            var i = $('<i>')
                .addClass('fa')
                .addClass('fa-clock-o')
                .html(time);
            small.append(i);
            divChild.append(small);
            var h = $('<h5>')
                .addClass('media-heading').html('Guest');
            divChild.append(h);
            var smallInner = $('<small>')
                .addClass('col-lg-10')
                .html(message);
            divChild.append(smallInner);
            divParent.append(divChild);
            $('.img-careprof').html(userCareTag);
        });
    });
</script>
